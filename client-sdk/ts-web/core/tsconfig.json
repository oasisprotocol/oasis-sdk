{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "strict": true,
        "module": "CommonJS",
        "target": "ES2020",
        "declaration": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*"
    ],
    "typedocOptions": {
        "entryPoints": ["src/index.ts"],
        "out": "docs/api",
        "excludeInternal": true,
        "excludePrivate": true
    }
}
