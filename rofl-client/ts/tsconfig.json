{
  "compilerOptions": {
    "outDir": "./dist/",
    "rootDir": "./src",
    "noImplicitAny": true,
    "strict": true,
    "module": "CommonJS",
    "target": "ES2020",
    "declaration": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["test/**/*", "examples/**/*"],
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "docs/api",
    "excludeInternal": true,
    "excludePrivate": true
  }
}
